<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 带按下效果的ImageView -->
      <declare-styleable name="Websharp_ImageView">
        <attr name="needFilter" format="boolean" />
    </declare-styleable>

    <!-- 滑动开关 -->
    <declare-styleable name="WiperSwitch">
        <attr name="switch_on" format="reference" />
        <attr name="switch_off" format="reference" />
        <attr name="switch_point" format="reference" />
    </declare-styleable>

    <!-- 圆形图片,带/不带一圈环 -->
    <declare-styleable name="ImageViewCircle">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 开展开的textview -->
    <declare-styleable name="ExpandableTextView">
        <attr name="expanded" format="boolean" />
        <attr name="minLines" format="integer" />
    </declare-styleable>

    <!-- 圆环形进度条 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

</resources>